{
    "name":"HDX curated cookbooks",
    "title":"HDX curated cookbooks",
    "type":"cookbook-library",
    "cookbooks":[
        {
            "name":"UNHCR Popstats demographics",
            "title": "UNHCR Popstats demographics",
            "type":"cookbook",
            "columns": [
                "#date+year",
                "#loc+name",
                "#affected+m+total",
                "#affected+f+total"
            ],
            "recipes": [
                {
                    "name": "By year",
                    "title": "By year",
                    "type": "comparison-chart",
                    "ingredients": {
                        "aggregateFunctions": [
                            "sum"
                        ],
                        "aggregateColumns": [
                            "#date+year"
                        ],
                        "valueColumns": [
                            "#affected+f+total / #affected+m+total"
                        ]
                    }
                },
                                {
                    "name": "By location (latest year)",
                    "title": "By location (latest year)",
                    "type": "comparison-chart",
                    "ingredients": {
                        "aggregateFunctions": [
                            "sum"
                        ],
                        "aggregateColumns": [
                            "#loc+name"
                        ],
                        "filtersWith": [
                            {
                                "#date+year": "$MAX$"
                            }
                        ],
                        "valueColumns": [
                            "#affected+f+total / #affected+m+total"
                        ]
                    }
                }
            ]
        }
    ]
}
